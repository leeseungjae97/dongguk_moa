<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="popupBase"
            stylesheets="/styles/okBtnPopupStyle.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="moa.controllers.OkBtnPopupController"
            prefHeight="100.0" prefWidth="150.0">
    <center>
        <HBox>
            <Label fx:id="popupContent" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"
                   maxWidth="Infinity" maxHeight="Infinity" alignment="BASELINE_CENTER"
                   textAlignment="CENTER">
                <padding>
                    <Insets top="25"/>
                </padding>
            </Label>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER">
            <Button fx:id="okay" text="확인" prefWidth="70" prefHeight="20" alignment="CENTER"/>
            <padding>
                <Insets bottom="10"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
